<script type="text/javascript">

var d;
function get_data(xx) {
//tutaj URL bedzie trzeba przerobic - jako argument powinien dostawac ID urzadzenia do monitorowaniwania
$.get('/get_data_from_c?x='+xx, function(data){
d = parseFloat(data);
});
return d;
};


Highcharts.setOptions({
global: {
useUTC: false
}
});


var plotting = true;
var chart;
var xx = 0.0;
$(document).ready(function() {
   chart = new Highcharts.Chart({
      chart: {
         renderTo: 'chart_container',
         marginRight: 10,
         events: {
            load: function() {
   
               // set up the updating of the chart every 0.2 seconds
               var series = this.series[0];
               setInterval(function() {
                  var x = (new Date()).getTime(), // current time
                     
										 
 										 y = get_data(xx);
 										 //y = Math.random(1)
										 if(typeof(y) == undefined)
										 {
										 	 y = 0;
										 }
                     //y = Math.sin(xx);
                     
                  	 xx = xx+ 0.1;
                  	 series.addPoint([x, y], true, true);


               }, 300);
            }
         }
      },
      title: {
         text: 'Live Load data'
      },
      xAxis: {
         type: 'datetime',
         tickPixelInterval: 25,
				 labels: {
				 		enabled: false
				 }
      },
      yAxis: {
         title: {
            text: 'Value'
         },
         plotLines: [{
            value: 0,
            width: 1,
            color: '#808080'
         }]
      },
      tooltip: {
				 enabled: true,
         formatter: function() {
               return Highcharts.dateFormat('%Y-%m-%d %H:%M:%S', this.x) +'<br/>'+ Highcharts.numberFormat(this.y, 2);
         }
      },
      
      legend: {
         enabled: true
      },
      exporting: {
         enabled: false
      },
      plotOptions:{
      	spline: {
      		animation: false
      	}
      },
      
      series: [{
         name: 'Random data',
         data: (function() {
            // generate an array of random data
            var data = [],
               time = (new Date()).getTime(),
               i;
            for (i = -100; i <= 0; i++) {
               data.push({
                  x: time + i * 1000,
                  y: 0
               });
            }
            return data;
         })()
      }]
   });
   
   
});
</script>




<div id="chart_container" style="width: 100%; height: 400px"></div>

