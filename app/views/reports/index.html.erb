<h1>Listing Reports</h1>
<table class="table">
	<thead>
		<tr>
		  <th>Device ID</th>
		  <th>Generation date</th>
		</tr>
	</theard>
	<tbody>
		<% @reports.each do |report| %>
			<tr>
				<td><%= report.device_id %></td>
				<td><%= report.created_at %></td>
<td><%= link_to 'Show',  { :controller => "reports", :action => "show", :id => report.id}, :class => "btn btn-small btn-info" %></td>
<td><%= link_to 'Destroy', { :controller => "reports", :action => "destroy", :id => report.id}, :class => "btn btn-small btn-danger"  %></td>

			</tr>
		<% end %>
	<tbody>
</table>
